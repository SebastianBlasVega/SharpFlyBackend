# ==========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==========================================
DB_ROOT_PASSWORD=root_password

# ==========================================
# CONFIGURACIÓN DE SEGURIDAD
# ==========================================
# IMPORTANTE: Cambiar este secreto en producción
# Genera un nuevo secreto con: openssl rand -base64 64
JWT_SECRET=NDI0MjQyNDI0MjQyNDI0MjQyNDI0MjQyNDI0MjQyNDI0MjQyNDI0MjQyNDI0Mg==
JWT_EXPIRATION_MS=36000000

# ==========================================
# CONFIGURACIÓN DE AMBIENTE
# ==========================================
# Valores posibles: dev, prod
# - dev: Para desarrollo local (servicios fuera de Docker)
# - prod: Para Docker/producción (servicios dentro de Docker)
SPRING_PROFILES_ACTIVE=prod

# ==========================================
# AUTH SERVICE
# ==========================================
AUTH_DATASOURCE_URL=jdbc:mysql://db:3306/auth_db?allowPublicKeyRetrieval=true&useSSL=false
AUTH_DATASOURCE_USERNAME=root
AUTH_DATASOURCE_PASSWORD=root_password
AUTH_SERVER_PORT=8990

# ==========================================
# FLIGHT SERVICE
# ==========================================
FLIGHT_DATASOURCE_URL=jdbc:mysql://db:3306/flight_db?allowPublicKeyRetrieval=true&useSSL=false
FLIGHT_DATASOURCE_USERNAME=root
FLIGHT_DATASOURCE_PASSWORD=root_password
FLIGHT_SERVER_PORT=8082

# ==========================================
# BOOKING SERVICE
# ==========================================
BOOKING_DATASOURCE_URL=jdbc:mysql://db:3306/booking_db?allowPublicKeyRetrieval=true&useSSL=false
BOOKING_DATASOURCE_USERNAME=root
BOOKING_DATASOURCE_PASSWORD=root_password
BOOKING_SERVER_PORT=8083

# URL del servicio de vuelos (para Feign client del booking-service)
# En Docker usa el nombre del contenedor: http://flight-service:8082
# En local usa: http://localhost:8082
FLIGHT_SERVICE_URL=http://flight-service:8082

# ==========================================
# API GATEWAY
# ==========================================
GATEWAY_SERVER_PORT=8080
# El API Gateway usa SPRING_PROFILES_ACTIVE para determinar las URLs de los servicios:
# - dev: Usa localhost:PUERTO (para ejecución local fuera de Docker)
# - prod: Usa nombres de contenedores Docker (auth-service:8990, flight-service:8082, etc.)

# ==========================================
# CONFIGURACIÓN DE PUERTOS EXTERNOS (Opcional)
# ==========================================
# Estos puertos se exponen fuera de Docker
# Útil si tienes conflictos de puertos en tu máquina
DB_EXTERNAL_PORT=3307
AUTH_EXTERNAL_PORT=8990
FLIGHT_EXTERNAL_PORT=8082
BOOKING_EXTERNAL_PORT=8083
GATEWAY_EXTERNAL_PORT=8080
